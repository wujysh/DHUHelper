<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/about_logo"
	        android:layout_width="100dp"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:src="@drawable/logo" />
	
	    <TextView
	        android:id="@+id/about_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="东华助手"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/about_version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="版本 1.5 (417)"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/about_author"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="©2014 吴嘉晔"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/about_send_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送反馈："
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="wujysh@gmail.com"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <TextView
        android:id="@+id/about_hint_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（如果您有任何想法，请告诉我）"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	
    <LinearLayout
		android:layout_width="250dp"
		android:layout_height="1dp"
		android:layout_margin="15dp"
		android:background="@drawable/border"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
	</LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp" >

        <TextView
	        android:id="@+id/about_introduce"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="        东华助手是一款专为东华大学学生设计的手机软件。为同学查看新闻信息；访问教务、图书馆等系统信息提供便利。未来将进一步连接学校信息门户、财务处、校园邮箱等服务资源，尽最大可能为东华学子的校园生活提供便利。\n\n        注：可免登陆使用新闻信息、图书查询等公开服务；成绩查询等校内服务须登录。"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textSize="13sp" />
    </ScrollView>

</LinearLayout>