<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/initscreen_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/init_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="3"
        android:src="@drawable/initscreen_logo" />

    <ImageView
        android:id="@+id/init_word"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:src="@drawable/initscreen_word" />

    <TextView
        android:id="@+id/init_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="正在连接学校网站 ..."
        android:textColor="#C0C0C0"
        android:textSize="15sp" />

</LinearLayout>